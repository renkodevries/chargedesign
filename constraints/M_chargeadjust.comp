# at least 75 positives (25 per monomer)
PENALTY_DEFINITION
TYPE ARG LYS
DELTA_START -1
DELTA_END 1
PENALTIES 100 0 0
ABSOLUTE 75
BEFORE_FUNCTION QUADRATIC
AFTER_FUNCTION CONSTANT
END_PENALTY_DEFINITION

# at least 75 negatives (25 per monomer)
PENALTY_DEFINITION
TYPE ASP GLU
DELTA_START -1
DELTA_END 1
PENALTIES 100 0 0
ABSOLUTE 75 
BEFORE_FUNCTION QUADRATIC
AFTER_FUNCTION CONSTANT
END_PENALTY_DEFINITION
